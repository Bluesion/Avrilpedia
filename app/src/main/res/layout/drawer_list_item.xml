<com.illusion.avrillavigne.customlibrary.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleColor="@color/drawer_selected_background"
    app:rippleDuration="150"
    app:rippleHover="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/nav_text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/nav_icon"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:textColor="@drawable/slider_text_color" />

    </RelativeLayout>
</com.illusion.avrillavigne.customlibrary.MaterialRippleLayout>